    <script>
        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // BMI Calculator
        function calculateBMI() {
            const weight = parseFloat(document.getElementById('weight').value);
            const height = parseFloat(document.getElementById('height').value);
            const age = parseInt(document.getElementById('age').value);
            const gender = document.getElementById('gender').value;

            if (!weight || !height || !age) {
                showToast('⚠️ Mohon lengkapi semua data!');
                return;
            }

            // Convert height from cm to meters
            const heightInMeters = height / 100;
            
            // Calculate BMI
            const bmi = weight / (heightInMeters * heightInMeters);
            const bmiRounded = bmi.toFixed(1);

            // Determine BMI category
            let category, description, recommendation;
            
            if (bmi < 18.5) {
                category = 'Kurus';
                description = 'Berat badan Anda kurang dari normal. ';
                recommendation = 'Disarankan untuk meningkatkan asupan kalori dengan makanan bergizi dan konsultasi dengan ahli gizi.';
            } else if (bmi >= 18.5 && bmi < 25) {
                category = 'Normal';
                description = 'Selamat! Berat badan Anda ideal. ';
                recommendation = 'Pertahankan dengan pola makan seimbang dan olahraga teratur.';
            } else if (bmi >= 25 && bmi < 30) {
                category = 'Kelebihan Berat Badan';
                description = 'Berat badan Anda sedikit berlebih. ';
                recommendation = 'Mulai kurangi porsi makan dan tingkatkan aktivitas fisik untuk mencapai berat ideal.';
            } else {
                category = 'Obesitas';
                description = 'Berat badan Anda sangat berlebih. ';
                recommendation = 'Sangat disarankan untuk berkonsultasi dengan dokter dan ahli gizi untuk program penurunan berat badan yang aman.';
            }

            // Display result
            document.getElementById('bmiValue').textContent = bmiRounded;
            document.getElementById('bmiCategory').textContent = category;
            document.getElementById('bmiDescription').textContent = description + recommendation;
            
            const resultDiv = document.getElementById('bmiResult');
            resultDiv.classList.add('show');

            // Calculate ideal weight
            const idealWeightMin = 18.5 * heightInMeters * heightInMeters;
            const idealWeightMax = 24.9 * heightInMeters * heightInMeters;
            
            // Generate meal plan suggestion
            generateMealPlan(bmi, gender, age);
            
            // Show success toast
            showToast('✅ BMI berhasil dihitung!');
            
            // Scroll to result
            resultDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        // Generate meal plan based on BMI
        function generateMealPlan(bmi, gender, age) {
            setTimeout(() => {
                const modal = document.getElementById('mealModal');
                const content = document.getElementById('mealPlanContent');
                
                let mealPlan = '<div class="meal-plan">';
                
                if (bmi < 18.5) {
                    // Underweight meal plan
                    mealPlan += `
                        <h4>Rencana Makan untuk Menambah Berat Badan</h4>
                        <div class="meal-time">
                            <h4>🌅 Sarapan (07:00)</h4>
                            <p>• Nasi goreng dengan telur<br>
                            • Susu full cream<br>
                            • Pisang</p>
                        </div>
                        <div class="meal-time">
                            <h4>🥤 Snack Pagi (10:00)</h4>
                            <p>• Smoothie alpukat dengan madu<br>
                            • Kacang almond</p>
                        </div>
                        <div class="meal-time">
                            <h4>☀️ Makan Siang (12:00)</h4>
                            <p>• Nasi putih 1.5 porsi<br>
                            • Ayam goreng<br>
                            • Tumis sayuran<br>
                            • Jus buah</p>
                        </div>
                        <div class="meal-time">
                            <h4>🍪 Snack Sore (15:00)</h4>
                            <p>• Roti gandum dengan selai kacang<br>
                            • Yogurt</p>
                        </div>
                        <div class="meal-time">
                            <h4>🌙 Makan Malam (19:00)</h4>
                            <p>• Nasi putih<br>
                            • Ikan salmon panggang<br>
                            • Sup krim jagung<br>
                            • Salad dengan dressing</p>
                        </div>`;
                } else if (bmi >= 18.5 && bmi < 25) {
                    // Normal weight meal plan
                    mealPlan += `
                        <h4>Rencana Makan untuk Mempertahankan Berat Ideal</h4>
                        <div class="meal-time">
                            <h4>🌅 Sarapan (07:00)</h4>
                            <p>• Oatmeal dengan buah-buahan<br>
                            • Telur rebus<br>
                            • Teh hijau</p>
                        </div>
                        <div class="meal-time">
                            <h4>🥤 Snack Pagi (10:00)</h4>
                            <p>• Buah apel<br>
                            • Kacang-kacangan (25g)</p>
                        </div>
                        <div class="meal-time">
                            <h4>☀️ Makan Siang (12:00)</h4>
                            <p>• Nasi merah 1 porsi<br>
                            • Dada ayam panggang<br>
                            • Sayuran kukus<br>
                            • Air putih</p>
                        </div>
                        <div class="meal-time">
                            <h4>🍪 Snack Sore (15:00)</h4>
                            <p>• Yogurt rendah lemak<br>
                            • Crackers gandum</p>
                        </div>
                        <div class="meal-time">
                            <h4>🌙 Makan Malam (19:00)</h4>
                            <p>• Nasi merah ½ porsi<br>
                            • Ikan bakar<br>
                            • Salad sayuran<br>
                            • Sup sayur</p>
                        </div>`;
                } else {
                    // Overweight/Obese meal plan
                    mealPlan += `
                        <h4>Rencana Makan untuk Menurunkan Berat Badan</h4>
                        <div class="meal-time">
                            <h4>🌅 Sarapan (07:00)</h4>
                            <p>• Roti gandum 1 lembar<br>
                            • Telur rebus tanpa kuning<br>
                            • Sayuran segar<br>
                            • Teh hijau tanpa gula</p>
                        </div>
                        <div class="meal-time">
                            <h4>🥤 Snack Pagi (10:00)</h4>
                            <p>• Buah jeruk<br>
                            • Air putih 2 gelas</p>
                        </div>
                        <div class="meal-time">
                            <h4>☀️ Makan Siang (12:00)</h4>
                            <p>• Nasi merah ½ porsi<br>
                            • Dada ayam kukus (tanpa kulit)<br>
                            • Sayuran rebus/kukus banyak<br>
                            • Air putih</p>
                        </div>
                        <div class="meal-time">
                            <h4>🍪 Snack Sore (15:00)</h4>
                            <p>• Timun & wortel<br>
                            • Teh hijau</p>
                        </div>
                        <div class="meal-time">
                            <h4>🌙 Makan Malam (18:00)</h4>
                            <p>• Salad sayuran besar<br>
                            • Ikan panggang/kukus<br>
                            • Sup sayur tanpa santan<br>
                            • Hindari karbohidrat</p>
                        </div>`;
                }
                
                mealPlan += `
                    <div style="margin-top: 1.5rem; padding: 1rem; background: #e8f6f3; border-radius: 10px;">
                        <p style="color: var(--text-dark); font-weight: 600;">💡 Tips Tambahan:</p>
                        <ul style="margin-left: 20px; color: var(--text-light);">
                            <li>Minum air putih minimal 8 gelas sehari</li>
                            <li>Hindari makanan olahan dan tinggi gula</li>
                            <li>Olahraga minimal 30 menit sehari</li>
                            <li>Tidur 7-8 jam setiap malam</li>
                        </ul>
                    </div>
                </div>`;
                
                content.innerHTML = mealPlan;
                modal.style.display = 'flex';
            }, 1000);
        }

        // Close meal modal
        function closeMealModal() {
            document.getElementById('mealModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('mealModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Toast notification function
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }

        // Add animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all cards
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.food-card, .tip-card');
            cards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                card.style.transition = 'all 0.6s ease';
                observer.observe(card);
            });
        });

        // Add interactive food item clicks
        document.querySelectorAll('.food-item').forEach(item => {
            item.addEventListener('click', function() {
                const foodName = this.querySelector('.food-name').textContent;
                const benefit = this.querySelector('.food-benefit').textContent;
                const calories = this.querySelector('.calories').textContent;
                
                showToast(`${foodName}: ${benefit} (${calories})`);
            });
        });

        // Add header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.background = 'linear-gradient(135deg, rgba(46, 204, 113, 0.98), rgba(39, 174, 96, 0.98))';
            } else {
                header.style.background = 'linear-gradient(135deg, var(--primary-color), var(--secondary-color))';
            }
        });

        // Initialize
        showToast('👋 Selamat datang di Ayo Hidup Sehat!');
    </script>
